<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Joystickgame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_600</item>
        <item name="colorSecondaryVariant">@color/brown_dark0</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/lime_500</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional, if your app is drawing behind the status bar also. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>